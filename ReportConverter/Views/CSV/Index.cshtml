@model ReportConverter.Models.BigViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <link href="~/Content/css/bootstrap-editable.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/js/bootstrap-editable.js"></script>
    <script src="~/Content/js/typeaheadjs.js"></script>
</head>
<body>
    CSV Converter

        @using (Html.BeginForm("Index", "CSV", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            
            
            @Html.DropDownListFor(m => m.ReportHeader.PartnerName, Model.PartnerList,
                     "Select Partner",
                     new { @class = "col-md-3 col-md-offset-1" })
            
            
            @Html.DropDownListFor(m => m.ReportHeader.Country, Model.CountryList,
                     "Select Country",
                     new { @class = "col-md-3 col-md-offset-1" })
            
            @Html.DropDownListFor(m => m.ReportHeader.ReportType, Model.ReportTypeList,
                     "Select Report Type",
                     new { @class = "col-md-3 col-md-offset-1" })
            
            <br />
            <br />
@*<span>Select File:</span>*@
            <input type="file" name="postedFile" />
            
            <br />
            <input type="submit" value="Convert to Excel" />  
        }
    @*,onchange = "window.location.href='/EDIFACT/PopulateList1/?param=' + this.value;" }*@
    <br />

    @Html.ActionLink("Create New CSV Mapping", "Index", "CSVMapping", null, new { @class = "btn btn-default" })


    @Html.ActionLink("Convert X12", "Index", "HOME", null, new { @class = "btn btn-default" })
    <hr />
    <br />

    @if (TempData["Message_NoFile"] != null)
    {
        <script>
            $(document).ready(function () {

                alert('@TempData["Message_NoFile"]');

            });
        </script>
    }

    @if (TempData["Message_Save_Mapping_Confirmation"] != null)
    {
        <script>
            $(document).ready(function () {

                alert('@TempData["Message_Save_Mapping_Confirmation"]');

            });
        </script>
    }

</body>


</html>
